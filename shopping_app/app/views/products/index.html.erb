<body bgcolor="#99CCCC" text="#000000" vlink="#0066FF">

<p align= right>
  <font size= "5" color ="#006600">Hello <%= @customername = Customer.find(session[:customer_id]).name%></font>
  <%= link_to 'Home', controller: 'welcome' %>
  <%= link_to 'Logout', session_path(session[:customer_id]),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
</p>
<HR SIZE="7" WIDTH="100%" color="#CC6699">


<h2>List of Products</h2>
<%= link_to 'New product', new_product_path %>

<style>
table,th {text-align: left;}

th { background-color: black; color: white; }

</style>

<table style= "width:50%" >
  <tr>
    <th>Name</th>

    <th>Price</th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>

      <td><%= product.price %></td>

      <td><%= link_to 'Show-details', product_path(product) %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destroy', product_path(product),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

